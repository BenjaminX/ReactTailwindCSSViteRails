{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react",
      "baseUrl": ".",
      "sourceMap": true,
      "paths": {
        "@/*": ["app/*"],
        "@/component*": ["app/frontend/components/*"]
      }
    },
    "include": ["app/**/*", "app/frontend/components/*"],
    "exclude": [
      "**/dist",
      "**/node_modules",
      "**/test"
    ]
  }